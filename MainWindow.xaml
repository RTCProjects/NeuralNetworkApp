<Window x:Name="mainWindow" x:Class="Neural_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NeuroApp" Height="640" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="startBtn" Content="Старт" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="startBtn_Click"/>
        <ListBox x:Name="logListBox" Margin="10,0,10,10" Height="141" VerticalAlignment="Bottom"/>
        <Button x:Name="stopBtn" Content="Стоп" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="stopBtn_Click"/>
        <Grid Margin="10,80,10,174">
            <Canvas x:Name="myCanvas"/>
        </Grid>

    </Grid>
</Window>
